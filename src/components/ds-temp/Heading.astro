---
type Props = {
  renderAs: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
  class?: string;
};

const { renderAs, class: className } = Astro.props;

const variants = {
  h1: "text-5xl md:text-6xl font-bold leading-tight tracking-tight",
  h2: "text-2xl font-bold tracking-tight",
  h3: "text-xl font-bold mb-3 flex items-center gap-2",
  h4: "text-xl font-bold text-text",
  h5: "",
  h6: "",
};

const Element = renderAs;
---

<Element class:list={[variants[renderAs], className]}>
  <slot />
</Element>
