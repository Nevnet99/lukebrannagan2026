---
import {
  Cpu,
  Code2,
  Wrench,
  Database,
  Layout,
  ShieldCheck,
  Terminal,
} from "@lucide/astro";

// --- DATA CONFIGURATION ---
const skillGroups = [
  {
    title: "Languages",
    icon: Code2,
    skills: [
      "TypeScript",
      "JavaScript (ES6+)",
      "HTML5",
      "CSS3",
      "C#",
      "Golang",
    ],
  },
  {
    title: "Core Stack",
    icon: Cpu,
    skills: ["React", "Next.js", "Node.js", "Astro"],
  },
  {
    title: "Tooling & DevOps",
    icon: Wrench,
    skills: ["Vite", "Rollup", "pnpm", "Docker", "AWS", "ESLint", "Biome"],
  },
  {
    title: "State & Data",
    icon: Database,
    skills: ["Zustand", "Redux", "TanStack Query", "GraphQL"],
  },
  {
    title: "Testing & Quality",
    icon: ShieldCheck,
    skills: ["Vitest", "React Testing Library", "Playwright", "Cypress"],
  },
  {
    title: "Styling & UI",
    icon: Layout,
    skills: ["Tailwind CSS", "CSS Modules", "Styled Components", "Storybook"],
  },
];
---

<section class="max-w-5xl mx-auto px-6 py-20 font-mono">
  {/* HEADER: COMMAND LINE STYLE */}
  <div class="flex items-center gap-3 mb-12 border-b border-text/10 pb-4">
    <Terminal size={20} class="text-text/60" />
    <h2 class="text-2xl font-bold tracking-tight">
      Technical Arsenal
      <span
        class="text-text/40 text-lg font-normal ml-4 hidden sm:inline-block"
      >
        &gt; npm list --depth=0
      </span>
    </h2>
  </div>

  {/* SKILLS GRID */}
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      skillGroups.map((group) => (
        <div class="group border border-text/20 bg-background hover:border-text/50 transition-colors duration-300">
          {/* Card Header */}
          <div class="flex items-center gap-2 px-4 py-3 border-b border-text/10 bg-text/5">
            <group.icon
              size={16}
              class="text-text/60 group-hover:text-blue-400 transition-colors"
            />
            <span class="text-sm font-bold uppercase tracking-wider">
              {group.title}
            </span>
          </div>

          {/* Skills List */}
          <div class="p-4 flex flex-wrap gap-2">
            {group.skills.map((skill) => (
              <span class="text-xs border border-text/10 px-2 py-1 text-text/70 hover:text-text hover:bg-text/10 cursor-default transition-colors">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))
    }
  </div>

  {/* BOTTOM DECORATION: MEMORY USAGE */}
  <div
    class="flex justify-end mt-4 text-[10px] text-text/40 uppercase tracking-widest"
  >
    [ MEMORY_USAGE: 24MB ] [ MODULES_LOADED: {
      skillGroups.reduce((acc, g) => acc + g.skills.length, 0)
    } ]
  </div>
</section>
