---
import { Github, Linkedin, Mail, ArrowUpRight, Terminal } from "@lucide/astro";

const year = new Date().getFullYear();

const links = [
  { label: "GITHUB", href: "https://github.com/Nevnet99", icon: Github },
  {
    label: "LINKEDIN",
    href: "https://www.linkedin.com/in/luke-brannagan",
    icon: Linkedin,
  },
  { label: "EMAIL", href: "mailto:luke@brannagan.co", icon: Mail },
];
---

<footer class="max-w-5xl mx-auto px-6 pt-20 pb-12 font-mono">
  <div
    class="border-t border-text/10 pt-12 flex flex-col md:flex-row justify-between items-start md:items-end gap-8"
  >
    {/* LEFT: THE FINAL COMMAND */}
    <div class="space-y-4">
      <div
        class="flex items-center gap-2 text-text/60 text-sm uppercase tracking-widest mb-2"
      >
        <Terminal size={14} />
        <span>End Session</span>
      </div>

      <div class="group">
        <div
          class="text-sm text-text/60 mb-1 pl-2 border-l-2 border-transparent group-hover:border-green-500 transition-colors"
        >
          root@luke-brannagan:~/portfolio# <span class="text-green-400"
            >./initiate_contact.sh</span
          >
        </div>

        <a
          href="mailto:luke@brannagan.co"
          class="inline-flex items-center gap-3 text-3xl md:text-4xl font-bold hover:text-green-400 transition-colors"
        >
          <span>luke@brannagan.co</span>
          <ArrowUpRight
            size={32}
            class="text-text/50 group-hover:text-green-400 transition-colors"
          />
        </a>
      </div>
    </div>

    {/* RIGHT: LINKS & COPYRIGHT */}
    <div class="flex flex-col gap-6 text-right w-full md:w-auto">
      <div class="flex flex-wrap justify-end gap-6">
        {
          links.map((link) => (
            <a
              href={link.href}
              target="_blank"
              class="flex items-center gap-2 text-sm font-bold uppercase hover:text-green-400 hover:underline decoration-green-400/50 underline-offset-4 transition-all"
            >
              <link.icon size={16} />
              {link.label}
            </a>
          ))
        }
      </div>

      <div class="text-xs text-text/60 space-y-1">
        <p>Â© {year} Luke Brannagan. All systems nominal.</p>
        <p>Built with Astro, React & Tailwind v4.</p>
      </div>
    </div>
  </div>
</footer>
