---
import type { HTMLAttributes } from "astro/types";

interface CustomProps {
  variant?: "primary" | "secondary";
  size?: "sm" | "md";
  icon?: any;
}

type LinkProps = CustomProps &
  HTMLAttributes<"a"> & { href: string; type?: never };

type ButtonProps = CustomProps & HTMLAttributes<"button"> & { href?: never };

type Props = LinkProps | ButtonProps;

const {
  variant = "primary",
  size = "md",
  class: className,
  icon: Icon,
  ...props
} = Astro.props;

const baseStyles =
  "inline-flex items-center justify-center gap-2 transition-all duration-200 font-mono disabled:opacity-50 disabled:pointer-events-none cursor-pointer";

const variants = {
  primary:
    "bg-text text-background font-bold hover:bg-white active:scale-95 shadow-sm",
  secondary:
    "border border-text/20 hover:bg-text/5 bg-background/50 backdrop-blur-sm text-text",
};

const sizes = {
  sm: "px-4 py-2 text-xs",
  md: "px-6 py-3 text-sm",
};

const Component = (props.href ? "a" : "button") as any;
---

<Component
  class:list={[baseStyles, variants[variant], sizes[size], className]}
  {...props}
>
  {Icon && <Icon size={size === "sm" ? 16 : 18} />}
  <slot />
</Component>
