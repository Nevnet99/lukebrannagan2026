---
import {
  Cpu,
  Code2,
  Wrench,
  Database,
  Layout,
  ShieldCheck,
  Terminal,
} from "@lucide/astro";
import Card from "../ds/Card.astro";
import Tag from "../ds/Tag.astro";
import Stack from "../ds/Stack.astro";
import SectionHeading from "../SectionHeading.astro";
import PageSection from "../structure/PageSection.astro";

const skillGroups = [
  {
    title: "Languages",
    icon: Code2,
    skills: [
      "TypeScript",
      "JavaScript (ES6+)",
      "HTML5",
      "CSS3",
      "C#",
      "Golang",
    ],
  },
  {
    title: "Core Stack",
    icon: Cpu,
    skills: ["React", "Next.js", "Node.js", "Astro"],
  },
  {
    title: "Tooling & DevOps",
    icon: Wrench,
    skills: ["Vite", "Rollup", "pnpm", "Docker", "AWS", "ESLint", "Biome"],
  },
  {
    title: "State & Data",
    icon: Database,
    skills: ["Zustand", "Redux", "TanStack Query", "GraphQL"],
  },
  {
    title: "Testing & Quality",
    icon: ShieldCheck,
    skills: ["Vitest", "React Testing Library", "Playwright", "Cypress"],
  },
  {
    title: "Styling & UI",
    icon: Layout,
    skills: ["Tailwind CSS", "CSS Modules", "Styled Components", "Storybook"],
  },
];
---

<PageSection>
  <SectionHeading>skills</SectionHeading>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      skillGroups.map((group) => (
        <Card padding="sm">
          <fragment slot="header">
            <group.icon
              size={16}
              class="text-text/60 group-hover:text-green-400 transition-colors"
            />
            <span class="text-sm font-bold uppercase tracking-wider">
              {group.title}
            </span>
          </fragment>

          <Stack type="row" gap="2" wrap>
            {group.skills.map((skill) => (
              <Tag>{skill}</Tag>
            ))}
          </Stack>
        </Card>
      ))
    }
  </div>
</PageSection>
